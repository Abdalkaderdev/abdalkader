{
  "buildCommand": "cd apps/quantumanim && pnpm build",
  "outputDirectory": "apps/quantumanim/.next",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://quantumanim.abdalkader.dev",
    "NODE_ENV": "production"
  },
  "functions": {
    "apps/quantumanim/pages/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}