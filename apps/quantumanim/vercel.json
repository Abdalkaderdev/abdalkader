{
  "version": 2,
  "name": "quantumanim",
  "buildCommand": "pnpm turbo run build --filter=quantumanim",
  "installCommand": "pnpm install --no-frozen-lockfile",
  "outputDirectory": "apps/quantumanim/.next",
  "framework": "nextjs",
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://quantumanim.abdalkader.dev"
  },
  "functions": {
    "apps/quantumanim/pages/api/**/*.ts": {
      "maxDuration": 10
    }
  }
}