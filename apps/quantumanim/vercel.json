{
  "version": 2,
  "name": "quantumanim",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_URL": "https://quantumanim.abdalkader.dev"
  },
  "functions": {
    "apps/quantumanim/pages/api/**/*.ts": {
      "maxDuration": 10
    }
  }
}