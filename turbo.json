{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "storybook-static/**", "public/**"],
      "cache": true,
      "env": ["NODE_ENV", "NEXT_PUBLIC_SITE_URL", "VERCEL_GIT_COMMIT_REF"]
    },
    "@abdalkader/portfolio#build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/portfolio/.next/**", "!apps/portfolio/.next/cache/**"],
      "cache": true
    },
    "@abdalkader/docs#build": {
      "dependsOn": ["^build"],
      "outputs": ["apps/docs/storybook-static/**"],
      "cache": true
    },
    "@abdalkader/blog#build": {
      "dependsOn": [],
      "outputs": ["apps/blog/public/**"],
      "cache": true
    },
    "@abdalkader/ui#build": {
      "dependsOn": [],
      "outputs": ["packages/ui/dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {
      "dependsOn": ["^build"]
    }
  }
}